<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.report.ExpenseByCashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <TextView
            android:id="@+id/cash_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/cash_name"
            android:textAlignment="viewStart"
            android:textColor="#8A50B3"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amount_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/amount_1"
            android:textAlignment="textEnd"
            android:textColor="#8A50B3"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8A50B3" />
</LinearLayout>